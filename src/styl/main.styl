$cdd-dark-green = #3e8e64
$cdd-light-green = #00cc8d

*
  box-sizing border-box
  padding 0
  margin 0

body
  font-family "open sans", helvetica, arial, sans-serif
  -webkit-font-smoothing antialiased
  background-color #000
  color #ccc
  padding 80px 0

.body-bg
  background-image url(../img/header-bg.png)
  background-repeat no-repeat
  background-position center top

.container
  max-width 1200px
  margin 0 auto
  padding 0 15px

.clearfix
  &:before
  &:after
    content ""
    display table
  &:after
    clear both
.logo
  text-align center
  img
    max-width 383px
    heigh auto

.col-50
  float left
  width 50%
  padding 0 10px

.main-informations
  text-align center
.header-title
  color white
  font-size 44px
  font-weight 300
  margin-bottom 10px
  span
    display block
    font-weight 700
    line-height 1.2
    font-size 23px
    letter-spacing 3px
.header-address
  color #fff
  font-size 16px
.header-inscription
  margin 30px 0
  color $cdd-light-green
  font-weight 700
  line-height 1.2
  font-size 20px
  span
    display block
    color $cdd-light-green
    font-weight 300
    line-height 1.2
    font-size 16px

.social-networks-label
  font-size 16px
  color #fff
  position relative
  margin-bottom 10px
  display inline-block
  &:before
  &:after
    content ''
    position absolute
    height 1px
    width 25px
    top 0
    bottom 0
    margin auto
    background #fff
  &:before
    left -30px
  &:after
    right -30px
.social-networks
  text-align center
  margin-bottom 30px
  li
    display inline-block
    margin 0 10px
.partner-label
  font-weight 300
  font-size 16px
  color white
  display block
  margin-top 10px
  margin-bottom 5px
.expert
  margin-top 40px
.roles
  ul
    display table
    width 100%
  li
    display table-cell
    p, strong
      opacity 0.3

.large-date
  position relative
  z-index 2
  strong
    font-size 300px
    font-weight 600
    line-height 1
  span
    font-size 60px
    font-weight 300
.video
  position relative
  display block
  img
    display block
  &:before
  &:after
    content ''
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    margin auto
  &:after
    width 45px
    height 61px
    background url(../img/play-ico.png)
    background-repeat no-repeat
    background-position right
    padding-left 10px
  &:before
    width 140px
    height 140px
    border-radius 50%
    background #78b683
    opacity 0.8
    box-shadow 0px 0px 0px 40px rgba(#78b683, .7)

.description
  position relative
  p
    font-size 16px
    z-index 2
    font-weight 300
    color #686968
    margin-bottom 20px
    position relative
  .description-highlight
    font-size 20px
    line-height 35px
    color $cdd-light-green
    font-weight 600
    max-width 445px

.has-title
  position relative
  margin-top 20px
  padding-top 180px
.container-title
  line-height 1
  position absolute
  text-align center
  font-size 248px
  font-weight 600
  opacity 0.8
  color #242424
  top 0
  left 0
  right 0
  margin 0 auto


.mosaic
  margin-top 30px
.mosaic-item
  overflow hidden
  position relative
  float left
  width calc(100%/7)
  &:before
    content ''
    display block
    position absolute
    width 100%
    height 100%
    z-index 2
    transition all 500ms
    transform scale(1.45)
  img
    width 100%
    height auto
    display block
  .mosaic-img
    position absolute
    margin auto
    top 0
    left 0
    bottom 0
    right 0
    transform scale(1)
    transition all 1s
  &:hover
    &:before
      border-radius 50%
      box-shadow inset 0 0 30px 10px rgba(0,0,0,0.75)
    .mosaic-img
      transform scale(1.5)


.staff
  text-align center
  position relative

.staff-member
  display inline-block
  width 150px
  &:not(:last-child)
    margin-right 20px
  &:hover
    .staff-image
      &:before
      &:after
        opacity 1
    
.staff-image
  position relative
  &:before
    content ''
    opacity 0
    position absolute
    width 100%
    height 100%
    background linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(0,0,0,0) 36%, rgba(0,0,0,1) 100%)
  &:after
    content ''
    opacity 0
    background url(../img/ico-twitter-staff.png)
    width 42px
    height 36px
    position absolute
    right 10px
    bottom 10px
    z-index 2
    
.staff-name
  color #fff
  font-size 14px
  opacity 0.3
  text-decoration none
  padding-top 10px

.faq
  color #fff
  input[type="radio"]
    opacity 0
.quest-trigger:checked
  & + .faq-quest
    &:before
      content "-"
    .quest-title
      color #85ca91
    .quest-response
      height 30px
    
.faq-quest
  position relative
  z-index 9
  display block
  padding 20px 30px
  border-bottom 1px solid #171717
  &:before
    content "+"
    position absolute
    left 0
    top 20px
    font-size 30px
    line-height 1
    font-weight 700
    color #171717
.quest-title
  transition all 500ms
  font-size 20px
  font-weight 600

.quest-response
  transition all 250ms
  overflow hidden
  height 0
  font-size 15px
  padding-top 10px
  a 
    color inherit
    
.winner-container
  position relative
  padding-bottom 56%
  background url(../img/winner.png)
  background-size cover
  background-position center center

.winner-legend
  position absolute
  right calc(-10px + 290 * ((100vw - 520px) / (1200 - 550)))
  top 33%
  font-weight 700
  padding-bottom 5px
  border-bottom 2px solid #85ca91
  dt
    font-size 20px
    color #85ca91
  dd
    font-size 15px
    color white